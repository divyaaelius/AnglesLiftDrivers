<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".invoice.InvoiceFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_invoice_total_rs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:hint="@string/pick"
                android:paddingLeft="@dimen/general_padding_20"
                android:paddingRight="@dimen/general_padding_20"
                android:text="@string/rs"
                android:textColor="@color/white"
                android:textSize="@dimen/font_26" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:hint="@string/pick"
                android:padding="@dimen/general_padding_10"
                android:text="@string/total_cost"
                android:textColor="@color/white"
                android:textSize="@dimen/font_18" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:orientation="vertical">


            <TextView
                android:id="@+id/txt_invoice_total_km"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:hint="@string/pick"
                android:paddingLeft="@dimen/general_padding_20"
                android:paddingRight="@dimen/general_padding_20"
                android:text="@string/pick_km"
                android:textColor="@color/white"
                android:textSize="@dimen/font_26" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/general_padding_10"
                android:text="@string/total_dis"
                android:textColor="@color/white"
                android:textSize="@dimen/font_18" />

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_margin="@dimen/general_padding_15"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            card_view:cardCornerRadius="5dp"
            card_view:cardElevation="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="@dimen/general_padding_15"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:foreground="?android:selectableItemBackground"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/general_padding_10">

                    <ImageView
                        android:layout_width="40.0dip"
                        android:layout_height="40.0dip"
                        android:background="@color/black"
                        android:padding="@dimen/general_padding_10"
                        android:src="@drawable/ic_near_me"
                        android:text="@string/icon_location"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_16" />

                    <TextView
                        android:id="@+id/txt_invoice_pickup_loc"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="@string/pick"
                        android:paddingLeft="@dimen/general_padding_20"
                        android:paddingRight="@dimen/general_padding_20"
                        android:text="@string/pick"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_18">

                    </TextView>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:background="@color/gray"
                    android:padding="@dimen/general_padding_5" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/general_padding_5"
                    android:foreground="?android:selectableItemBackground"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="40.0dip"
                        android:layout_height="40.0dip"
                        android:background="@color/black"
                        android:padding="@dimen/general_padding_10"
                        android:src="@drawable/ic_location"
                        android:text="@string/icon_location"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_16" />

                    <TextView
                        android:id="@+id/txt_invoice_drop_loc"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="@dimen/general_padding_20"
                        android:paddingRight="@dimen/general_padding_20"
                        android:text="@string/drop"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_18">

                    </TextView>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>


    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_margin="@dimen/general_padding_15"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/general_padding_15"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/general_padding_5"
                    android:text="@string/trip_cost"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_18" />

                <TextView
                    android:id="@+id/txt_invoice_trip_cost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:padding="@dimen/general_padding_5"
                    android:text="@string/trip_cost"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_18" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/general_padding_5"
                    android:text="@string/discount"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_18" />

                <TextView
                    android:id="@+id/txt_invoice_trip_discount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:padding="@dimen/general_padding_5"
                    android:text="@string/discount"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_18" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:background="@color/gray"
                android:padding="@dimen/general_padding_5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/general_padding_5"
                    android:text="@string/total"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_18" />

                <TextView
                    android:id="@+id/txt_invoice_trip_total"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:padding="@dimen/general_padding_5"
                    android:text="@string/total"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_18" />
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/btn_invoice_payment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="@dimen/general_padding_15"
        android:background="@drawable/my_button"
        android:text="@string/payments"
        android:textColor="@color/white" />
</LinearLayout>


