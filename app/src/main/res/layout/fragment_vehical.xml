<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/veh_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="3"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context=".login.fragment.VehicalServiceFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/general_padding_15">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/veh_img"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:src="@drawable/logo1" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"

            android:layout_marginTop="@dimen/general_padding_10"
            android:layout_weight="1.5">


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                custom:cardCornerRadius="@dimen/general_padding_10">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/general_padding_10"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:text="Vehical"
                    android:textColor="@color/black"
                    android:textSize="20sp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/marg_fivedp"
                    android:layout_marginTop="@dimen/general_height_50"
                    android:layout_marginRight="@dimen/marg_fivedp"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:layout_margin="1dp"
                                android:background="@drawable/state_pressed_rectangle"
                                android:orientation="horizontal"
                                android:paddingLeft="60dp">

                                <EditText
                                    android:id="@+id/edt_veh_no"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_margin="@dimen/marg_fivedp"
                                    android:layout_toRightOf="@+id/imgSrc"
                                    android:background="@color/transparent"
                                    android:hint="@string/veh_no"
                                    android:inputType="text"
                                    android:paddingLeft="@dimen/marg_tendp"
                                    android:textColor="@color/black"
                                    android:textColorHint="@color/black"
                                    android:textSize="16.0sp"
                                    android:textStyle="normal" />

                                <requestFocus />
                            </LinearLayout>

                            <ImageButton
                                android:id="@+id/imgSrc"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:background="@drawable/state_pressed_ripple"
                                android:gravity="center"

                                android:text="@string/icon_location"
                                android:textColor="@color/white"
                                android:textSize="@dimen/font_16" />

                        </RelativeLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:layout_margin="1dp"
                                android:background="@drawable/state_pressed_rectangle"
                                android:orientation="horizontal"
                                android:paddingLeft="60dp">

                                <EditText
                                    android:id="@+id/edt_veh_doc"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_margin="@dimen/marg_fivedp"
                                    android:layout_toRightOf="@+id/imgSrc"
                                    android:background="@color/transparent"
                                    android:hint="@string/veh_doc"
                                    android:inputType="text"
                                    android:paddingLeft="@dimen/marg_tendp"
                                    android:textColor="@color/black"
                                    android:textColorHint="@color/black"
                                    android:textSize="16.0sp"
                                    android:textStyle="normal" />

                                <requestFocus />
                            </LinearLayout>

                            <ImageButton
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:background="@drawable/state_pressed_ripple"
                                android:gravity="center"

                                android:text="@string/icon_location"
                                android:textColor="@color/white"
                                android:textSize="@dimen/font_16" />

                        </RelativeLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:layout_margin="1dp"
                                android:background="@drawable/state_pressed_rectangle"
                                android:orientation="horizontal"
                                android:paddingLeft="60dp">

                                <EditText
                                    android:id="@+id/edt_veh_detalis"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_margin="@dimen/marg_fivedp"
                                    android:layout_toRightOf="@+id/imgSrc"
                                    android:background="@color/transparent"
                                    android:hint="@string/veh_details"
                                    android:inputType="text"
                                    android:paddingLeft="@dimen/marg_tendp"

                                    android:textColor="@color/black"
                                    android:textColorHint="@color/black"
                                    android:textSize="16.0sp"
                                    android:textStyle="normal" />

                                <requestFocus />
                            </LinearLayout>

                            <ImageButton
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:background="@drawable/state_pressed_ripple"
                                android:gravity="center"

                                android:text="@string/icon_location"
                                android:textColor="@color/white"
                                android:textSize="@dimen/font_16" />

                        </RelativeLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:layout_margin="1dp"
                                android:background="@drawable/state_pressed_rectangle"
                                android:orientation="horizontal"
                                android:paddingLeft="60dp">

                                <EditText
                                    android:id="@+id/edt_veh_seater"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_margin="@dimen/marg_fivedp"
                                    android:layout_toRightOf="@+id/imgSrc"
                                    android:background="@color/transparent"
                                    android:hint="@string/seater"
                                    android:inputType="text"
                                    android:paddingLeft="@dimen/marg_tendp"
                                    android:singleLine="true"
                                    android:textColor="@color/black"
                                    android:textColorHint="@color/black"
                                    android:textSize="16.0sp"
                                    android:textStyle="normal" />

                                <requestFocus />
                            </LinearLayout>

                            <ImageButton
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:background="@drawable/state_pressed_ripple"
                                android:gravity="center"

                                android:text="@string/icon_location"
                                android:textColor="@color/white"
                                android:textSize="@dimen/font_16" />

                        </RelativeLayout>


                    </LinearLayout>


                    <Button
                        android:id="@+id/btn_driver_register"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/marg_tendp"
                        android:layout_marginTop="@dimen/general_padding_30"
                        android:background="@drawable/btn_yellow"
                        android:text="@string/register"
                        android:textColor="@color/white"
                        android:textSize="@dimen/drawer_text" />


                </LinearLayout>

            </android.support.v7.widget.CardView>

        </ScrollView>
    </LinearLayout>

</FrameLayout>