<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="3"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:padding="@dimen/general_padding_15"
    tools:context=".login.LoginActivity">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        custom:cardCornerRadius="@dimen/general_padding_10">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/general_padding_10"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:text="Enter OTP"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/marg_fivedp"
            android:layout_marginTop="@dimen/marg_twentydp"
            android:layout_marginRight="@dimen/marg_fivedp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="@dimen/general_padding_15"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/marg_sevntytydp"
                        android:layout_margin="1dp"
                        android:background="@drawable/state_pressed_rectangle"
                        android:orientation="horizontal"
                        android:paddingLeft="60dp">

                        <EditText
                            android:id="@+id/otp_no"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/marg_fivedp"
                            android:background="@color/transparent"
                            android:hint="@string/otp"
                            android:inputType="number"
                            android:maxLength="4"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black"
                            android:textSize="16.0sp"
                            android:textStyle="normal" />

                        <requestFocus />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/imgSrc"
                        android:layout_width="@dimen/marg_sevntytydp"
                        android:layout_height="@dimen/marg_sevntytydp"
                        android:background="@drawable/state_pressed_ripple"
                        android:gravity="center"
                        android:src="@drawable/ic_near_me"
                        android:text="@string/icon_location"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_16" />

                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marg_tendp"
                android:layout_weight="2"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/otp_submit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/marg_fifteendp"
                    android:layout_marginTop="@dimen/general_padding_30"
                    android:layout_weight="1"
                    android:background="@drawable/btn_yellow"
                    android:text="@string/done"
                    android:textColor="@color/white"
                    android:textSize="@dimen/drawer_text" />

                <Button
                    android:id="@+id/otp_resend"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/marg_fifteendp"
                    android:layout_marginTop="@dimen/general_padding_30"
                    android:layout_weight="1"
                    android:background="@drawable/btn_yellow"
                    android:text="@string/resend"
                    android:textColor="@color/white"
                    android:textSize="@dimen/drawer_text" />
            </LinearLayout>


        </LinearLayout>
    </android.support.v7.widget.CardView>


    <!--<com.google.android.gms.common.SignInButton
        android:id="@+id/sign_in_button_google"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/general_padding_15"
        android:background="@drawable/btn_empty" />
-->


</LinearLayout>