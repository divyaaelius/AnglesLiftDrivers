<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:padding="@dimen/general_padding_5"
    tools:context=".Setting.ChangePasswordActivity">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        custom:cardCornerRadius="@dimen/general_padding_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/general_padding_15">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_margin="1dp"
                        android:background="@drawable/state_pressed_rectangle"
                        android:orientation="horizontal"
                        android:paddingLeft="60dp">

                        <EditText
                            android:id="@+id/old_pass"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/marg_fivedp"
                            android:layout_toRightOf="@+id/imgSrcconpass"
                            android:background="@color/transparent"
                            android:hint="@string/old_pass"
                            android:inputType="textPassword"
                            android:paddingLeft="@dimen/marg_tendp"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black"
                            android:textSize="16.0sp"
                            android:textStyle="normal" />

                        <requestFocus />
                    </LinearLayout>

                    <ImageButton
                        android:id="@+id/imgSrcconpass"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/state_pressed_ripple"
                        android:gravity="center"
                        android:src="@drawable/lock"
                        android:text="@string/icon_location"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_16" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_margin="1dp"
                        android:background="@drawable/state_pressed_rectangle"
                        android:orientation="horizontal"
                        android:paddingLeft="60dp">

                        <EditText
                            android:id="@+id/new_pass"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/marg_fivedp"
                            android:layout_toRightOf="@+id/imgSrcnewpass"
                            android:background="@color/transparent"
                            android:hint="@string/new_pass"
                            android:inputType="textPassword"
                            android:paddingLeft="@dimen/marg_tendp"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black"
                            android:textSize="16.0sp"
                            android:textStyle="normal" />

                        <requestFocus />
                    </LinearLayout>

                    <ImageButton
                        android:id="@+id/imgSrcnewpass"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/state_pressed_ripple"
                        android:gravity="center"
                        android:src="@drawable/lock"
                        android:text="@string/icon_location"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_16" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_margin="1dp"
                        android:background="@drawable/state_pressed_rectangle"
                        android:orientation="horizontal"
                        android:paddingLeft="60dp">

                        <EditText
                            android:id="@+id/confm_new_pass"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/marg_fivedp"
                            android:layout_toRightOf="@+id/imgSrcconnewpass"
                            android:background="@color/transparent"
                            android:hint="@string/password_conf"
                            android:inputType="textPassword"
                            android:paddingLeft="@dimen/marg_tendp"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black"
                            android:textSize="16.0sp"
                            android:textStyle="normal" />

                        <requestFocus />
                    </LinearLayout>

                    <ImageButton
                        android:id="@+id/imgSrcconnewpass"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/state_pressed_ripple"
                        android:gravity="center"
                        android:src="@drawable/lock"
                        android:text="@string/icon_location"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_16" />

                </RelativeLayout>

            </LinearLayout>

            <Button
                android:id="@+id/change_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/general_padding_10"
                android:layout_marginTop="@dimen/marg_fivedp"
                android:background="@drawable/btn_yellow"
                android:text="@string/change"
                android:textColor="@color/white" />
        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>